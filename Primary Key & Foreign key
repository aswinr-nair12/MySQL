1) CREATE TABLE authors (author_id INT AUTO_INCREMENT, name VARCHAR(100) NOT NULL, PRIMARY KEY (author_id));

2) CREATE TABLE books4 (book_id INT AUTO_INCREMENT, title VARCHAR(150) NOT NULL, author_id INT, PRIMARY KEY (book_id), FOREIGN KEY (author_id) REFERENCES authors(author_id));

3) CREATE INDEX author_index ON books4(author_id);
